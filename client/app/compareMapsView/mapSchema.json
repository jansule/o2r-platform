{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "map schema",
    "description": "Schema of a single map",
    "type": "object",
    "definitions": {
        "choropleth": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["choropleth"]
                },
                "number-of-classes": {
                    "type": "integer"
                },
                "colors": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "legend": {
                    "type": "object",
                    "properties": {
                        "display-min": {
                            "type": "boolean"
                        },
                        "display-max": {
                            "type": "boolean"
                        },
                        "title": {
                            "type": "string"
                        },
                        "position": {
                            "type": "string",
                            "enum": ["topleft", "topright", "bottomleft", "bottomright"]
                        }
                    }
                }
            }
        },
        "proportionalSymbol": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["proportionalSymbol"]
                },
                "color": {
                    "type": "string"
                },
                "symboltype": {
                    "type": "string",
                    "enum": ["circle", "square", "other"]
                },
                "legend": {
                    "type": "object",
                    "properties": {
                        "number-of-symbols": {
                            "type": "integer"
                        },
                        "display-max-size": {
                            "type": "boolean"
                        },
                        "display-min-size": {
                            "type": "boolean"
                        },
                        "display-max": {
                            "type": "boolean"
                        },
                        "display-min": {
                            "type": "boolean"
                        },
                        "title": {
                            "type": "string"
                        },
                        "position": {
                            "type": "string",
                            "enum": ["topleft", "topright", "bottomleft", "bottomright"]
                        }
                    }
                }
            }
        },
        "additional-info": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "object",
                    "properties": {
                        "displayed": {
                            "type": "boolean",
                            "description": "true if labels are displayed"
                        },
                        "data-type": {
                            "$ref": "#/definitions/data-type"
                        },
                        "display-value": {
                            "type": "string",
                            "description": "name of attribute, that is displayed"
                        }
                    },
                    "required": ["displayed"]
                },
                "table": {
                    "type": "object",
                    "properties": {
                        "displayed": {
                            "type": "boolean"
                        },
                        "displayed-value": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }   
                    },
                    "required": ["displayed"]
                }
            }
        },
        "value-to-display": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "string"
                },
                "data-type": {
                    "$ref": "#/definitions/data-type"
                },
                "scale-of-measurement": {
                    "type": "string"
                }
            }
        },
        "data-type": {
            "type": "string",
            "enum": ["string", "integer", "float", "double"]
        }
    },
    "properties": {
        "maptype": {
            "type": "object",
            "oneOf": [
                {"$ref": "#/definitions/choropleth"},
                {"$ref": "#/definitions/proportionalSymbol"}
            ]
        },
        "value-to-display": {
            "$ref": "#/definitions/value-to-display"
        },
        "additional-info": {
            "$ref": "#/definitions/additional-info"
        },
        "raw": {
            "type": "object",
            "description": "contains geojson"
        }
    },
    "required": [
        "maptype",
        "value-to-display",
        "additional-info",
        "raw"
    ]
}